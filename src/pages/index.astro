---
import Layout from "../layouts/Layout.astro";
import Socials from "../components/Socials.astro";
import Chips from "../components/Chips.astro";
import Card from "../components/Card.astro";
import { getCollection } from "astro:content";
const allblogs = await getCollection("blogs");

const pageTitle = "Home Page";
// import DoubleArrow from "/double_arrow_right.svg?url";

import arrowOutward from "/arrow_outward.svg?url";
---

<Layout title={pageTitle}>
  <main class="container flex flex-col items-center space-y-10">
    <section class="flex flex-col items-center self-center place-items-center place-self-center max-w-screen-md space-y-4">
      <img
        class="w-28 h-28 mb-3 rounded-full shadow-lg"
        src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80"
        alt="Bonnie image"
      />
      <h1 class="name">Hi, Iâ€™m Gokul ðŸ‘‹</h1>
      <p class="text-sm">Software Engineer @ Cisco</p>
      <p class="text-base text-center">
        Python & JavaScript expert with a focus on web technologies, microservices and devops. 
        <br/>I have a passion for software. <br/> I enjoy creating tools that make life easier for people.
      </p>
      <a href="/about" class="text-xs inline-flex items-center">Explore my portfolio.
        <svg class="w-3.5 h-3.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
      </a>
      <hr class="w-48 h-0.5 mx-auto my-4 bg-gray-100 border-0 rounded" />
      <Socials />
    </section>

    <section class="items-center w-full md:w-3/4 space-y-6">
      <h1 class="subtitle text-center">Writings</h1>
        {
          allblogs.map((blog) => (
          <Card 
          title={blog.data.title}, 
          description={blog.data.description},
          day={blog.data.pubDate.toLocaleDateString("en-us", {weekday: "short"})},
          date={blog.data.pubDate.toLocaleDateString("en-us", {day: "2-digit"})}, 
          month={blog.data.pubDate.toLocaleDateString("en-us", {month: "short"})}, 
          year={blog.data.pubDate.getFullYear()}, 
          href=`/blogs/${blog.slug}/`
          />
          ))
        }
    </section>
  </main>
</Layout>
